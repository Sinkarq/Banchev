@model List<Domain.Grade>

@{
    Layout = "_Layout";
}

<div id="container">
    <div style="display: flex; margin-bottom: 0.5rem;">
        <a asp-controller="Admin" asp-action="CreateUser" id="createButton">Създай потребител</a>
    </div>
    <table>
        <tr>
            <th>Оценка</th>
            <th>От</th>
            <th>Дата</th>
            <th>Предмет</th>
        </tr>
        @foreach(var grade in Model)
        {
            <tr>
                <td>@grade.Value</td>
                <td>@grade.CreatedByName</td>
                <td>@grade.CreatedOn.ToString("g")</td>
                <td>@grade.Subject</td>
            </tr>
        }
    </table>
</div>


@section Styles
{
    <style>
        table {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
            height: 5rem;
        }

        table td, table th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        table tr:nth-child(even){background-color: #f2f2f2;}

        table tr:hover {background-color: #ddd;}

        table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #b9b9b9;
            color: white;
        }
        
        #container {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        #createButton {
            margin-left: auto;
            color: #ffffff;
            border: none;
            border-radius: 0.5rem; /* 3xl ≈ 24px */
            padding: 0.5rem 2rem;
            font-weight: 500;      /* medium */
            display: flex;
            background-color: #123456; /* replace with actual "blacklist-blue" value */
            text-decoration: none;
        }
    </style>
}